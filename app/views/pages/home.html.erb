

<div class="homepagebuttons d-flex flex-column align-items-center justify-content-center mt-5">
  <% if user_signed_in? %>
    <%= render 'shared/navbar' %>
    <div class="btn">
      <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, style: "text-decoration: none; color: #3d3b8e;" %>
    </div>
  <% else %>
    <div class="btn">
      <%= link_to "Sign In", new_user_session_path, style: "text-decoration: none; color: #3d3b8e;" %>
    </div>

    <div class="btn">
      <%= link_to "Sign Up", new_user_registration_path, style: "text-decoration: none; color: #3d3b8e;" %>
    </div>
  <% end %>
</div>
