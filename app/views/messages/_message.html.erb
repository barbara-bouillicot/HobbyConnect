<div id="message-<%= message.id %>" class="<%= message.user == @chatroom.asker ? 'asker-message' : 'receiver-message' %>">
  <div class="message-content">
    <p><%= message.content %></p>
    <small><i style="color: grey; padding-right: 6px"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i></small>
  </div>
</div>
