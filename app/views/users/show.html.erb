<div class="container">

  <h1><%= @user.username %></h1>

  <% age = Date.today.year - @user.birthdate.year %>
  <% age -= 1 if Date.today.strftime("%m%d") < @user.birthdate.strftime("%m%d") %>
  <p>Age: <%= age %></p>
  <p>Location: <%= @user.location %></p>
  <p>Bio: <%= @user.bio %></p>
  <p>Selected hobbies: </p>
  <% @hobbies.each do |hobby| %>
  <p><%= hobby.name %></p>
  <% end %>
  <p>Events: </p>
  <% if @user == current_user %>
    <button data-bs-toggle="modal" data-bs-target="#eventAddModal">Add</button>
    <div class="modal fade" id="eventDetailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="eventDetailModalLabel">New Event</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">

          </div>
          <div class="modal-footer">

          </div>
        </div>
      </div>
    </div>
    <% end %>
  <ul>
  <% @events.each do |event| %>
  <li><%= event.name%> | <%= event.location%> | <%= event.date%></li>
  <%end%>
  </ul>
  <% if @user == current_user %>
    <%= link_to "edit", edit_registration_path(current_user) %>
  <% end %>


</div>
